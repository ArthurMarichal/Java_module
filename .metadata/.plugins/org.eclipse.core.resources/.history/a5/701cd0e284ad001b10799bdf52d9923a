package characters;
import java.util.Scanner;
import java.util.ArrayList;
import java.util.List;
 public class menu {
	 
	 Scanner scan;
	 String value;
	 static boolean exit = false;
	 List<mage> mageCharacters = new ArrayList<>();
	 List<war> warCharacters = new ArrayList<>();
	 
	 
	 
	 menu(){
		 this.scan = new Scanner(System.in);
	 }
	 
	 public static void main(String[] args) {
		 
		 menu m = new menu();
		 
		while(exit==false) { 
		 m.display();
		 }
	 }


	private void display() {
		System.out.println("Bonjour et bienvenue dans le nouveau jeu : D&G");
		System.out.println(warCharacters);
		System.out.println(mageCharacters);
		System.out.println("Faites votre choix : 1 pour un guerrier, 2 pour un mage ou alors 3 pour quitter.");
		int characterChoice = scan.nextInt();
		
		if(characterChoice == 1 ) {
			System.out.println("Vous avez choisi un guerrier !");
			scan.nextLine();
			System.out.println("Quel est son nom ?");
			String name = scan.nextLine();
			war w1 = new war(name, 10, 8, "Beau");
			System.out.println("Votre guerrier : " + w1);
			warCharacters.add(w1);
			System.out.println("Vous désirez changer son nom ? 1 pour oui, 2 pour non.");
			int nameChoice = scan.nextInt();
			if(nameChoice==1) {
				scan.nextLine();
				System.out.println("Nouveau nom :");
				value = scan.nextLine();
				war w2 = new war(value, 10, 8, "Beau");
				System.out.println("Votre guerrier : " + w2);
				warCharacters.add(w2);
			}
		} else if (characterChoice == 2) {
			System.out.println("Vous avez choisi un mage !");
			scan.nextLine();
			System.out.println("Quel est son nom ?");
			String name = scan.nextLine();
			mage m1 = new mage(name, 10, 12, "Sensuel");
			System.out.println("votre mage : " + m1);
			mageCharacters.add(m1);
			System.out.println("Vous désirez changer son nom ? 1 pour oui, 2 pour non.");
			int nameChoice = scan.nextInt();
			if(nameChoice==1) {
				scan.nextLine();
				System.out.println("Nouveau nom :");
				value = scan.nextLine();
				mage m2 = new mage(value, 10, 12, "Sensuel");
				System.out.println("Votre mage : " + m2);
				mageCharacters.add(m2);
			}
			
		} else if(characterChoice == 3) {
			exit = true;
			System.out.println("Vous avez choisi de quittez le jeu. Vous ne pourrez donc JAMAIS tuer le dragon !");
		}		
	}
 }